{
  "name": "clavius",
  "version": "1.0.0",
  "description": "clavius cms (▀̿Ĺ̯▀̿ ̿)",
  "main": "index.js",
  "repository": "git@github.com:mutationapp/clavius.git",
  "author": "ibsukru",
  "license": "Apache-2.0",
  "private": "true",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=14.x",
    "yarn": "1.x"
  },
  "scripts": {
    "lint": "eslint 'packages/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "yarn lint --fix",
    "cwd": "yarn --cwd",
    "cwd:web": "yarn cwd packages/clavius.web",
    "dev": "yarn cwd:web dev",
    "clean:dist": "rm -rf packages/**/dist*",
    "build": "yarn clean:dist && lerna run build",
    "build:dev": "yarn build",
    "compile": "tsc --noEmit",
    "start": "yarn cwd:web start",
    "stryker": "stryker run",
    "test": "lerna run test -- -u",
    "mutate": "mutate"
  },
  "devDependencies": {
    "@babel/runtime": "^7.12.5",
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-syntax-jsx": "^7.12.1",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@mutationapp/mutate": "^1.1.6",
    "@stryker-mutator/core": "^4.2.0",
    "@stryker-mutator/jest-runner": "^4.2.0",
    "@stryker-mutator/typescript": "^4.0.0",
    "@types/enzyme": "^3.10.8",
    "@types/lodash.defaultsdeep": "^4.6.6",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn compile"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ]
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "lodash.defaultsdeep": "^4.6.1",
    "nodemon": "^2.0.6"
  }
}